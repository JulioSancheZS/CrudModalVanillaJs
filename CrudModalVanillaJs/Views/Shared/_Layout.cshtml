<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bulma </title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar is-fixed-top is-primary" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "navbar-item" })
                @Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "navbar-item" })
                @Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "navbar-item" })
                @Html.ActionLink("Persona", "Index", "Persona", null, new { @class = "navbar-item" })
            </div>

        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Bulma</p>
    </footer>

    @Scripts.Render("~/bundles/Index")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    let MenuBurger = () => {

        let burger = document.querySelector('.burger');
        let menu = document.querySelector('#' + burger.dataset.target);
        burger.addEventListener('click', () => {

            burger.classList.toggle('is-active');
            menu.classList.toggle('is-active');
        })
    }

    MenuBurger();

</script>